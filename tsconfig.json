{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "removeComments": true,
    "strict": false,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "checkJs": false,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"    
  ],
  "exclude": ["node_modules"]
}
